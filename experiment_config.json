{
  "simulation": {
    "N": 2,
    "k": [
      [0.0, 1.0],
      [1.0, 0.0]
    ],
    "m": [0.01, 0.001],
    "damping": 0.002,
    "dt": 0.002,
    "max_force": 20.0,
    "max_episode_steps": 5000,
