    "observation_noise_std": 0.005
  },
  "pid_controller": {
    "kp": 25.0,
    "ki": 5.0,
    "kd": 2.0,
    "output_limits": [-20.0, 20.0],
    "integral_limits": [-2.0, 2.0]
  },
  "experiment": {
    "name": "two_oscillator_experiment",
    "description": "Two oscillator system with fixed end and PID control",
    "duration_steps": 5000,
    "update_factor": 5,
    "reference_trajectory": {
      "type": "step",
      "step_time": 2.0,
      "initial_value": 0.0,
      "final_value": 0.5
    },
    "data_collection": {
      "save_results": true,
      "output_directory": "./results/two_oscillator",
      "plot_results": true
    }
  }
